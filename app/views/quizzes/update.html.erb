<!--app/views/quizzes/update.html.erb-->
<script>
    const loadQuestion = (url) => {
        fetch(url, {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
          .then(response => response.text())
          .then(data => {
              document.querySelector('.question-box').innerHTML = data;
          })
          .catch(error => console.error('Error:', error));
    };


    <% if @question.errors.any? %>
    alert("回答を保存できませんでした: <%= j @question.errors.full_messages.join(', ') %>");
    <% else %>
    loadQuestion("<%= j render 'questions/question', question: @question %>");
    <% end %>


</script>
