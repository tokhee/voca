<!--app/views/questions/update.html.erb-->
<script>
    document.querySelector('.question-box').innerHTML =
        `<%= j render partial: 'questions/question', locals: { question: @current_question } %>`;
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');

    if (<%= @previous_question_id.nil? %>) {
        prevBtn.classList.add('hidden');
    } else {
        prevBtn.classList.remove('hidden');
        prevBtn.dataset.url = "<%= @previous_question_id ? question_path(@previous_question_id, format: :js) : '#' %>";
    }

    if (<%= @next_question_id.nil? %>) {
        nextBtn.innerText = '採点する';
        nextBtn.dataset.url = "<%= grade_quiz_path(@question.quiz, format: :js) %>";
    } else {
        nextBtn.innerText = '次の問題へ';
        nextBtn.classList.remove('hidden');
        nextBtn.dataset.url = "<%= @next_question_id ? question_path(@next_question_id, format: :js) : '#' %>";
    }


</script>