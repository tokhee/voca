<!-- app/views/questions/_question.html.erb -->
<style>
    .title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .title h3, .title h4 {
        margin: 0;
    }

    .question-box {
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .question-box form {
        display: flex;
        flex-direction: column;
    }

    .question-box div {
        margin-bottom: 0.5rem;
    }

    .question-box label {
        margin-left: 0.5rem;
    }

</style>

<div id="question-<%= question.id %>" class="question-box" data-next-question-id="<%= next_question_id %>" data-prev-question-id="<%= previous_question_id %>">
  <div class="title">
    <div>
      <h3>問題 <%= question_index %> </h3>
      <h4><%= question.word.title %>の意味は何ですか？</h4>
    </div>
    <div>
      <h3>全問 <%= total_questions %></h3>
    </div>
  </div>

  <form action="<%= question_path(question, format: :js) %>" method="post" class="question-form">
    <% choices.each do |choice| %>
      <div>
        <input type="radio" name="question[user_answer]" value="<%= choice %>">
        <label><%= choice %></label>
      </div>
    <% end %>
    <input type="hidden" name="question[answered]" value="true">
  </form>
</div>

